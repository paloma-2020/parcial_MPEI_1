.global _main
;;;;; Configuraciones para el contador 
;dentro del main establecer la configuracion


	 .data
i:      .hword 0x8000       ;Crear variable i en la posicion 0x8000 
j:      .hword 0x8002       ;Crear variable j en la posicion 0x8001  
       

.text			    ;Esto era para separar las variables del programa, y era lo que faltaba 
      
.equ	  valor,9
;;;;;;;;;


; NOTA DE SIMULACION.
;Puesto que no se esta haciendo uso de un antirrebote, 
;para cambiar de scuencia, se debe dejar el boton en alto, 
;hasta que se visualice la siguiente. Luego, se debe dejar el boton en 0.

_main:
	MOV     #0X0400, W0    ; Vector que describe como se va a comportar el PORTB 
	MOV     W0, TRISB      ; Declaracion de variables de entrada y salida 
        MOV     #0X0000, W0
        MOV     W0, PORTB
	;;;;;;
	MOV	    #valor, W8	    ;Pasar etiqueta valor a W0	
	MOV	    W8,i	    ;Pasar W0 a la variable i
	MOV	    i, W8
	MOV	    W8,j
	;;;;;;
_bucle:
        
	
	CALL    RUTINA  ; llama la secuencia que quiero evaluar
	GOTO    _bucle      
evaluar_boton:
        
	CALL DELAY1S
        MOV    PORTB, W4
	MOV    #0X0400, W5
	AND    W4,W5, W0
	CP0    W0 
	BRA    Z, RETORNO 
	
	CP0    j
	BRA    Z,REINICIO
	DEC    j
	GOTO   _bucle
RETORNO:
	RETURN
REINICIO:
         MOV    W8,j
	 GOTO _bucle

RUTINA: MOV	    j,W3  
	CP0	    W3 
	BRA	    Z,_seq_nueve
	CP          W3,#0X01
	BRA         Z,_seq_ocho
	CP          W3,#0x02
	BRA         Z,_seq_siete
	CP          W3,#0x03
	BRA         Z,_seq_seis
	CP          W3,#0x04
	BRA         Z,_seq_cinco
	CP          W3,#0x05
	BRA         Z,_seq_cuatro
	CP          W3,#0x06
	BRA         Z,_seq_tres
	CP          W3,#0x07
	BRA         Z,_seq_dos
	CP          W3,#0x08
	BRA         Z,_seq_uno
	CP          W3,#0x09
	BRA         Z,_seq_cero
	RETURN
DELAY1S:
        MOV        #1000,W0
REPETIR:
        DEC        W0, W1
        MOV        W1, W0
        BRA        Z, RETORNAR
        REPEAT  #5000
        NOP
        GOTO    REPETIR
RETORNAR:
        RETURN 
	
_seq_cero:
        MOV     #0X0000, W0
	MOV     W0,LATB
	CALL evaluar_boton
	RETURN 
_seq_uno:
    	MOV	#0X3FF,	W0
    	MOV	W0, LATB
	CALL evaluar_boton
    	RETURN
_seq_dos:
        MOV     #0X5555,W0
	MOV     W0,LATB
	CALL evaluar_boton
	RETURN
_seq_tres:
    	MOV	#0X2AA,	W0
    	MOV	W0, LATB
	CALL evaluar_boton
    	RETURN
_seq_cuatro:
        MOV     #0X5555,W0
	MOV     W0,LATB
	CALL evaluar_boton
	
	MOV     #0XAAAA,W0
	MOV     W0,LATB
	CALL evaluar_boton
	
	RETURN
_seq_cinco:
    	MOV	#0X20,	W0
    	MOV     W0, LATB
	CALL evaluar_boton
    	MOV     #0X0,W0
    	MOV     W0, LATB
	CALL evaluar_boton
    	
    	RETURN
_seq_seis:
    	BSET    LATB, #0x0
	
	CALL    evaluar_boton
	BCLR    LATB, #0x0
	BSET    LATB, #0x1
       
	CALL    evaluar_boton
	BCLR    LATB, #0x1
	BSET    LATB, #0x2
	
	CALL    evaluar_boton
	BCLR    LATB, #0x2
	BSET    LATB, #0x3
	
	CALL    evaluar_boton
	BCLR    LATB, #0x3
	BSET    LATB, #0x4
	
	CALL    evaluar_boton
	BCLR    LATB, #0x4
	BSET    LATB, #0x5

	CALL    evaluar_boton
	BCLR    LATB, #0x5
	BSET    LATB, #0x6

	CALL    evaluar_boton
	BCLR    LATB, #0x6
	BSET    LATB, #0x7

	CALL    evaluar_boton
	BCLR    LATB, #0x7
	BSET    LATB, #0x8
	
	CALL    evaluar_boton
	BCLR    LATB, #0x8
	BSET    LATB, #0x9
	
	CALL    evaluar_boton
	BCLR    LATB, #0x9
	RETURN
_seq_siete:
    	MOV #0X0200, W2
    	MOV W2, LATB
    
	CALL    evaluar_boton
    	MOV #0X0100, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	MOV #0X0080, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	MOV #0X40, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	MOV #0X020, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	MOV #0X010, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	MOV #0X8, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	MOV #0X4, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	MOV #0X2, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	MOV #0X1, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	MOV #0X0, W2
    	MOV W2, LATB
	CALL    evaluar_boton
    	RETURN
_seq_ocho:
       MOV     #0X001F,W0
       MOV     W0, LATB
     
       CALL evaluar_boton
       MOV     #0X0000,W0
       MOV     W0, LATB
       CALL evaluar_boton
       MOV     #0X03E0,W1
       MOV     W1, LATB
       CALL    evaluar_boton
       RETURN
       
_seq_nueve:
	MOV     #0X0,W1
	MOV     W1, LATB
	
	CALL    evaluar_boton
	MOV     #0X201,W1
	MOV     W1, LATB
	
	CALL    evaluar_boton
	MOV     #0X102,W1
	MOV     W1, LATB
	
	CALL    evaluar_boton
	MOV     #0X84,W1
	MOV     W1, LATB
	
	CALL    evaluar_boton
	MOV     #0X48,W1
	MOV     W1, LATB
	
	CALL    evaluar_boton
	MOV     #0X30,W1
	MOV     W1, LATB
	
	CALL    evaluar_boton
	RETURN

.END



